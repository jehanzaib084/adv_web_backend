{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "order",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "branch": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::branch.branch"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "orders"
    },
    "order_items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order-item.order-item",
      "mappedBy": "order"
    },
    "payment": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::payment.payment",
      "mappedBy": "order"
    },
    "delivery_type": {
      "type": "enumeration",
      "enum": ["delivery", "takeaway", "dine-in"]
    },
    "delivery_address": {
      "type": "text"
    },
    "total_amount": {
      "type": "integer"
    },
    "order_status": {
      "type": "enumeration",
      "enum": ["pending", "preparing", "out_for_delivery", "completed", "cancelled"]
    },
    "placed_at": {
      "type": "datetime"
    }
  }
}
