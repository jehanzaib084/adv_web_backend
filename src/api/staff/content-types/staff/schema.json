{
  "kind": "collectionType",
  "collectionName": "staffs",
  "info": {
    "singularName": "staff",
    "pluralName": "staffs",
    "displayName": "staff"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "full_name": {
      "type": "string"
    },
    "email": {
      "type": "email"
    },
    "phone": {
      "type": "integer"
    },
    "role": {
      "type": "enumeration",
      "enum": ["manager", "cashier", "chef", "rider"]
    },
    "password": {
      "type": "password"
    },
    "is_active": {
      "type": "boolean"
    },
    "branch": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::branch.branch",
      "inversedBy": "staff"
    }
  }
}
